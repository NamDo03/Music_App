
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Outer background color -->
    <solid android:color="#ffffff" />

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="#FF0000" />

    <!-- Padding -->
    <padding
        android:left="15dp"
        android:top="15dp"
        android:right="15dp"
        android:bottom="15dp" />

</shape>
